{
	"version": "0.1.0",
	"command": "npm",
	"args": ["run", "--silent"],
	"isShellCommand": true,
	"showOutput": "silent",
	"tasks": [
		{
			"taskName": "compile",
			"isBuildCommand": true,
			"problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"isWatching": true,
			"problemMatcher": "$tsc-watch"
		}
	]
}